<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/sfv_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <SurfaceView
        android:id="@+id/sfv_face"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_circle">

        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_gravity="center"-->
            <!--android:scaleType="centerInside"-->
            <!--android:src="@drawable/bg_circle" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="@drawable/top">

            <ImageView
                android:id="@+id/share_btn"
                android:layout_width="@dimen/header_btn_start_width"
                android:layout_height="@dimen/header_btn_start_height"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/header_btn_margin_bottom"
                android:layout_marginLeft="@dimen/header_btn_share_margin_left"
                android:layout_marginRight="@dimen/header_btn_share_margin_right"
                android:layout_marginTop="@dimen/header_btn_margin_top"
                android:scaleType="centerInside"
                android:src="@drawable/btn_share" />

            <ImageView
                android:id="@+id/again_btn"
                android:layout_width="@dimen/header_btn_start_width"
                android:layout_height="@dimen/header_btn_start_height"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/header_btn_margin_bottom"
                android:layout_marginLeft="@dimen/header_btn_again_margin_left"
                android:layout_marginRight="@dimen/header_btn_again_margin_right"
                android:layout_marginTop="@dimen/header_btn_margin_top"
                android:scaleType="centerInside"
                android:src="@drawable/btn_play_again" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.ogaclejapan.arclayout.ArcLayout
                android:id="@+id/arc_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|top"
                app:arc_axisRadius="@dimen/layout_child_offset_small"
                app:arc_origin="center"
                app:arc_radius="@dimen/layout_radius_small">

                <ImageView
                    android:id="@+id/angle_0"
                    android:layout_width="@dimen/balloon_width_small"
                    android:layout_height="@dimen/balloon_height_small"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/balloon_green" />

                <ImageView
                    android:id="@+id/angle_45"
                    android:layout_width="@dimen/balloon_width_small"
                    android:layout_height="@dimen/balloon_height_small"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/balloon_purple" />

                <ImageView
                    android:id="@+id/angle_90"
                    android:layout_width="@dimen/balloon_width_small"
                    android:layout_height="@dimen/balloon_height_small"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/balloon_red" />

                <ImageView
                    android:id="@+id/angle_135"
                    android:layout_width="@dimen/balloon_width_small"
                    android:layout_height="@dimen/balloon_height_small"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/balloon_yellow" />

                <ImageView
                    android:id="@+id/angle_180"
                    android:layout_width="@dimen/balloon_width_small"
                    android:layout_height="@dimen/balloon_height_small"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/balloon_green" />

                <ImageView
                    android:id="@+id/angle_225"
                    android:layout_width="@dimen/balloon_width_small"
                    android:layout_height="@dimen/balloon_height_small"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/balloon_purple" />

                <ImageView
                    android:id="@+id/angle_270"
                    android:layout_width="@dimen/balloon_width_small"
                    android:layout_height="@dimen/balloon_height_small"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/balloon_red" />

                <ImageView
                    android:id="@+id/angle_315"
                    android:layout_width="@dimen/balloon_width_small"
                    android:layout_height="@dimen/balloon_height_small"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/balloon_yellow" />
            </com.ogaclejapan.arclayout.ArcLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/my_record"
                android:layout_width="@dimen/bottom_btn_width"
                android:layout_height="@dimen/bottom_btn_height"
                android:layout_marginBottom="@dimen/bottom_btn_bottom_margin"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/btn_record" />

            <ImageView
                android:id="@+id/global_rank"
                android:layout_width="@dimen/bottom_btn_width"
                android:layout_height="@dimen/bottom_btn_height"
                android:layout_marginBottom="@dimen/bottom_btn_bottom_margin"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/btn_rank" />

            <ImageView
                android:id="@+id/demo"
                android:layout_width="@dimen/bottom_btn_width"
                android:layout_height="@dimen/bottom_btn_height"
                android:layout_marginBottom="@dimen/bottom_btn_bottom_margin"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/btn_demo" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>